<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.mnadimut.myappportfolio.MainActivity"
        android:gravity="top"
        android:fitsSystemWindows="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Nanodegree Apps!"
            android:id="@+id/textView"
            android:layout_marginTop="47dp"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="1"
            android:rowCount="6"
            android:textAlignment="center"
            android:useDefaultMargins="true"
            android:padding="@dimen/abc_action_bar_content_inset_material"
            android:foregroundGravity="center"
            android:layout_below="@+id/textView"
            android:layout_centerInParent="true">

            <Button
                android:text="@string/str_project_0"
                android:id="@+id/btn_popular_movies"
                android:layout_row="0"
                android:layout_column="0"
                style="@style/appButton"
            />

            <Button
                style="@style/appButton"
                android:text="@string/str_project_1"
                android:id="@+id/btn_stock_hawk"
                android:layout_row="1"
                android:layout_column="0"
            />

            <Button
                style="@style/appButton"
                android:text="@string/str_project_2"
                android:id="@+id/btn_build_it_bigger"
                android:layout_row="2"
                android:layout_column="0"
            />

            <Button
                style="@style/appButton"
                android:text="@string/str_project_3"
                android:id="@+id/btn_make_material"
                android:layout_row="3"
                android:layout_column="0"
            />

            <Button
                style="@style/appButton"
                android:text="@string/str_project_4"
                android:id="@+id/btn_go_ubiquitous"
                android:layout_row="4"
                android:layout_column="0"
            />

            <Button
                style="@style/appButton"
                android:text="@string/str_project_5"
                android:id="@+id/btn_capstone"
                android:layout_row="5"
                android:layout_column="0"
            />

        </GridLayout>

    </RelativeLayout>
</ScrollView>